{
	"name": "dinorpg",
	"version": "0.0.1",
	"description": "Re-dÃ©veloppement du jeu DinoRPG de Motion Twin",
	"private": "true",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"client:dev": "pnpm --filter @dinorpg/client run dev",
		"server:dev": "pnpm --filter @dinorpg/server run dev",
		"core:dev": "pnpm --filter @dinorpg/core run dev",
		"dev": "pnpm --recursive --parallel --stream run dev",
		"check": "pnpm eslint . --ext .ts,.tsx,.vue && prettier --check \"**/*.{ts,tsx,js,vue,css,json,md}\"",
		"fix": "pnpm eslint . --ext .ts,.tsx,.vue --fix && prettier --write .",
		"build": "pnpm --recursive run build",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,vue,js,json,css,md}": [
			"pnpm eslint --fix",
			"pnpm prettier --write"
		]
	},
	"keywords": [],
	"author": "Matthieu83600",
	"license": "ISC",
	"packageManager": "pnpm@10.12.1",
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"eslint": "^9.39.1",
		"eslint-define-config": "^2.1.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-vue": "^10.5.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"typescript": "~5.9.3",
		"vue-eslint-parser": "^10.2.0"
	}
}
