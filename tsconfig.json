{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"references": [
		{
			"path": "app/client"
		},
		{
			"path": "app/server"
		},
		{
			"path": "packages/core"
		}
	]
}
